                        {% endif %}
                        {% if samedi[loop.index0] == 1 %}
                            <a href="/action_newrdv?id={{ id[loop.index0] }}&jour=Samedi">Samedi</a>
                        {% endif %}
                        {% if dimanche[loop.index0] == 1 %}
