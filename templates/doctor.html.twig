            </div>

            {% for nom_doc in nom %}
                <div class="container_title" id="divresult">
                    <p class="grey">{{ nom_doc }}</p>
                    <p class="greyer">
                        {% if lundi[loop.index0] == 1 %}
                            <a href="/action_newrdv?id={{ id[loop.index0] }}&jour=Lundi">Lundi</a>
